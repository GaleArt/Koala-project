// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int @id @default(autoincrement())
  title       String 
  description String?
  created_at  DateTime @default(now())
}

model Instruments {
  id          Int @id @default(autoincrement())
  smena       Int
  name        String
  description String?
  type        String
  test        DateTime
  next_test   DateTime
}
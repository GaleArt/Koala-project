// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Instrument {
  id          Int @id @default(autoincrement())
  smena       Int
  name        String
  description String?
  type        String?
  test        DateTime
  next_test   DateTime?
}